---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import MainLayout from '../../layouts/MainLayout.astro';
import type { TPost } from '../../../types';

const posts = (await getCollection('blog')).sort(
	(a:TPost, b:TPost) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<style>
	main {
		width: 960px;
	}
	.content-box {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	.content-box .content {
		width: calc(50% - 1rem);
	}
	.content-box .content * {
		text-decoration: none;
		transition: 0.2s ease;
	}
	.content-box .content:first-child {
		width: 100%;
		margin-bottom: 1rem;
		text-align: center;
	}
	.content-box .content:first-child img {
		width: 100%;
	}
	.content-box .content:first-child .title {
		font-size: 2.369rem;
	}
	.content-box .content img {
		margin-bottom: 0.5rem;
		border-radius: 12px;
	}
	.content-box .content a {
		display: block;
	}
	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
	}
	.content-box .content a:hover h4,
	.content-box .content a:hover .date {
		color: rgb(var(--accent));
	}
	.content-box a:hover img {
		box-shadow: var(--box-shadow);
	}
	@media (max-width: 720px) {
		.content-box {
			gap: 0.5em;
		}
		.content-box .content {
			width: 100%;
			text-align: center;
		}
		.content-box .content:first-child {
			margin-bottom: 0;
		}
		.content-box .content:first-child .title {
			font-size: 1.563em;
		}
	}
</style>

<MainLayout title="DEV Inertia | Blog">
	<main>
		<section>
			<div class="content-box">
				{
					posts.map((post:TPost) => (
						<div class="content">
							<a href={`/blog/${post.slug}/`}>
								<img width={720} height={360} src={post.data.heroImage} alt="" />
								<h4 class="title">{post.data.title}</h4>
								<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						</div>
					))
				}
			</div>
		</section>
	</main>
</MainLayout>
