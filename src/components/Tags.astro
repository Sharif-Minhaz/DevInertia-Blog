---
import Divider from "./Divider.astro";

const {data} = Astro.props;
---

<div class="mt-[70px]">
    <Divider title="Tags" />
    <div class="flex flex-wrap gap-3 justify-center mt-8">
        {data.map((tag:string) => <a href={`/tags/#${tag}`}><span class="inline-flex text-[18px] px-4 py-1 items-center justify-center border text-slate-600 border-slate-300 dark:border-slate-700 dark:text-slate-300 rounded-full">#{tag}</span></a>)}
    </div>
</div>
